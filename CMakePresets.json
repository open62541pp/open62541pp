{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build/${presetName}"
        },
        {
            "name": "dev",
            "inherits": [
                "base"
            ],
            "installDir": "${sourceDir}/install/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "UAPP_BUILD_TESTS": "ON",
                "UAPP_WARNINGS_AS_ERRORS": "ON",
                "UAPP_ENABLE_NODESETLOADER": "ON",
                "UAPP_ENABLE_SANITIZER_UNDEFINED_BEHAVIOR": "ON"
            }
        },
        {
            "name": "dev-asan",
            "inherits": [
                "dev"
            ],
            "cacheVariables": {
                "UAPP_ENABLE_SANITIZER_ADDRESS": "ON"
            }
        },
        {
            "name": "dev-tsan",
            "inherits": [
                "dev"
            ],
            "cacheVariables": {
                "UAPP_ENABLE_SANITIZER_THREAD": "ON"
            }
        },
        {
            "name": "dev-lint",
            "inherits": [
                "dev"
            ],
            "cacheVariables": {
                "UAPP_ENABLE_CLANG_TIDY": "ON"
            }
        },
        {
            "name": "examples",
            "inherits": [
                "base"
            ],
            "cacheVariables": {
                "UAPP_BUILD_EXAMPLES": "ON"
            }
        },
        {
            "name": "doc",
            "inherits": [
                "base"
            ],
            "cacheVariables": {
                "UAPP_BUILD_DOCUMENTATION": "ON"
            }
        },
        {
            "name": "release",
            "inherits": [
                "base"
            ],
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ]
}